body,html
  line-height: 1
  font-weight: 200

.fullPage
  display flex
  flex-direction column
  justify-content center
  height 100%
  .content-wrapper
    flex 1
    overflow-x hidden
    overflow-y auto
    min-height 0
    padding-top .2rem


border-1px($color)
  position: relative
  &:before
    display: block
    position: absolute
    left: 0
    bottom:0
    width: 100%
    border-top:1px solid $color
    content:' '
border-none()
  &:before
    display: none


button-1px($color,$radius)
  position: relative
  &:before
    display: block
    position: absolute
    top: 0
    left:0
    width: 100%
    height 100%
    border:1px solid $color
    border-radius $radius
    content:' '
  

@media (-webkit-min-device-pixel-ratio:1.5),(min-device-pixel-ratio:1.5)
  .border-1px
    &:after
      -webkit-transform: scaleY(0.7)
      transform: scaleY(0.7)

@media (-webkit-min-device-pixel-ratio:2),(min-device-pixel-ratio:2)
  .border-1px
    &:after
      -webkit-transform: scaleY(0.5)
      transform: scaleY(0.5)

@media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
  .border-1px
    &:after
      -webkit-transform: scaleY(0.3)
      transform: scaleY(0.3)


bg-image($url)
  background-image: url($url+'.png')


// 隐藏进度条圆圈
.spinner
  display none !important
body #nprogress .bar
  background #d3b78f